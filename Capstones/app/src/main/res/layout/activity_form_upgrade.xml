<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormUpgradeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/bannerform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pbold"
        android:text="@string/form_pendaftaran_pengajar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <TextView
        android:id="@+id/txtPerhatian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pmedium"
        android:text="Perhatian!"
        android:textColor="@color/title"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/txtLink"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:fontFamily="@font/pmedium"
        android:text="@string/txt_Link"
        android:textColor="@color/title"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtPerhatian"
        app:layout_constraintTop_toBottomOf="@+id/txtPerhatian" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pmedium"
        android:text="@string/txt_hasilUjian"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtLink"
        app:layout_constraintTop_toBottomOf="@+id/txtLink" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:autofillHints=""
        android:background="@drawable/shape_edittext"
        android:drawablePadding="18dp"
        android:fontFamily="@font/pregular"
        android:hint="@string/nilai"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txt_Matpel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pmedium"
        android:text="@string/minat"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtLink"
        app:layout_constraintTop_toBottomOf="@+id/editEmail" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPendidikan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="377dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/pendidikan_icon"
        android:fontFamily="@font/pregular"
        android:hint="Pendidikan terakhir"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_Matpel"
        app:layout_constraintTop_toBottomOf="@+id/txt_Matpel">

        <AutoCompleteTextView
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edittext"
            android:drawableStart="@drawable/pendidikan_icon"
            android:drawablePadding="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtTahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pmedium"
        android:text="@string/tahun"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtLink"
        app:layout_constraintTop_toBottomOf="@+id/inputPendidikan" />

    <EditText
        android:id="@+id/inputTahun"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:autofillHints=""
        android:background="@drawable/shape_edittext"
        android:drawablePadding="18dp"
        android:fontFamily="@font/pregular"
        android:hint="@string/input_tahun"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTahun"
        app:layout_constraintTop_toBottomOf="@+id/txtTahun" />

    <TextView
        android:id="@+id/txt_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pmedium"
        android:text="@string/upload"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtLink"
        app:layout_constraintTop_toBottomOf="@+id/inputTahun" />

    <EditText
        android:id="@+id/input_Upload"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:autofillHints=""
        android:background="@drawable/shape_edittext"
        android:drawablePadding="18dp"
        android:fontFamily="@font/pregular"
        android:hint="@string/input_indentitas"
        android:drawableRight="@drawable/camera"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTahun"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:alpha="1"
        android:background="@drawable/shape_button"
        android:fontFamily="@font/pmedium"
        android:text="@string/btUpload"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/input_Upload"
        app:layout_constraintStart_toStartOf="@+id/input_Upload"
        app:layout_constraintTop_toBottomOf="@+id/input_Upload" />
        </androidx.constraintlayout.widget.ConstraintLayout>

