    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_dialog"
            android:layout_width="match_parent"
